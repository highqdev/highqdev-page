---
import ServiceCard from "../components/SeviceCard.astro";
import RightArrowIcon from "../assets/icons/sections/RightArrowIcon.astro";
import LeftArrowIcon from "../assets/icons/sections/RightArrowIcon.astro"; // (este ya no se usará en grid, puedes eliminarlo si quieres)

const cards = [
    {
        title: "Desarrollo Web",
        text: "Desarrollamos sitios web optimizados y escalables.",
        pathIcon: "Web",
        pathBackground: "/desarrollo-web.jpg",
    },
    {
        title: "Desarrollo Móvil",
        text: "Creación de aplicaciones móviles para Android y iOS.",
        pathIcon: "Movil",
        pathBackground: "/movil.jpg",
    },
    {
        title: "Diseño UI/UX",
        text: "Diseñamos interfaces atractivas y fáciles de usar.",
        pathIcon: "UX",
        pathBackground: "/ui.jpg",
    },
    {
        title: "E-Commerce",
        text: "Desarrollo de plataformas de comercio electrónico.",
        pathIcon: "Ecomerce",
        pathBackground: "/comerce.png",
    },
];
---

<section id="servicios"
  aria-labelledby="Servicios"
  class="w-full max-w-screen-2xl mx-auto py-10 px-4 sm:px-6 lg:px-8 h-fit"
>
  <h2
    
    class="text-2xl sm:text-3xl font-bold mt-8 sm:mt-10 text-center px-2 sm:px-0 pb-4"
    >
    Servicios
  </h2>

  <!-- Grid en lugar del carrusel -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 mt-6 mb-12">
    {cards.map((info, index) => (
      <ServiceCard
        key={index}
        title={info.title}
        text={info.text}
        icon={info.pathIcon}
        pathBackground={info.pathBackground}
      />
    ))}
  </div>
</section>
